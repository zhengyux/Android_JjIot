<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/switchover_host_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_zigbeeactivity.AddZigBeeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/login_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/add_zigbee"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <RelativeLayout
            android:id="@+id/add_zigbee_back_img"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_top_back" />
        </RelativeLayout>

    </RelativeLayout>

   <TextView
       android:id="@+id/add_zigbee_time_txt"
       android:text="10"
       android:textSize="120dp"
       android:layout_marginTop="150dp"
       android:textColor="#f93251"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

    <TextView
        android:textSize="13dp"
        android:layout_marginTop="30dp"
        android:text="@string/add_zigbee_tips"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/add_zigbee_begin_img"
        android:layout_marginTop="40dp"
        android:src="@mipmap/btn_tj_ks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>