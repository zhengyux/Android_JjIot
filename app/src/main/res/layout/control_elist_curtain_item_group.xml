<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2b2f4d"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/control_elist_item_group_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前排"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <LinearLayout
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/control_elist_item_group_close_img"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/btn_gb_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/control_elist_item_group_stop_img"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/btn_tz_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/control_elist_item_group_open_img"
                android:layout_marginRight="5dp"
                android:src="@mipmap/btn_dk_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_cl2" />

        <SeekBar
            android:id="@+id/control_elist_item_group_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:max="100" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_cl1" />


    </LinearLayout>

</LinearLayout>